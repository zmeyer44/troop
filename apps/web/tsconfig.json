{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "module": "esnext",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.js",
    "tailwind.config.ts"
  ],
  "files": ["global.d.ts"],
  "exclude": ["node_modules"]
}
